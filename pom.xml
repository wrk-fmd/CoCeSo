<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>at.wrk.coceso</groupId>
  <artifactId>base</artifactId>
  <packaging>pom</packaging>
  <version>2.0.0</version>
  <name>Coceso Base</name>

  <properties>
    <commons.lang.version>3.4</commons.lang.version>
    <commons.csv.version>1.2</commons.csv.version>
    <hibernate.version>5.1.0.Final</hibernate.version>
    <hibernate.validator.version>5.2.4.Final</hibernate.validator.version>
    <hibernate.persistence.version>1.0.0.Final</hibernate.persistence.version>
    <itextpdf.version>5.5.8</itextpdf.version>
    <jackson.version>2.6.5</jackson.version>
    <jsp.version>2.0</jsp.version>
    <jstl.version>1.2</jstl.version>
    <servlet.version>3.1.0</servlet.version>
    <spring.version>4.2.5.RELEASE</spring.version>
    <spring.data.version>1.11.4.RELEASE</spring.data.version>
    <spring.data.jpa.version>1.9.4.RELEASE</spring.data.jpa.version>
    <spring.security.version>4.0.4.RELEASE</spring.security.version>
    <spring.shell.version>1.1.0.RELEASE</spring.shell.version>
    <tomcat.version>8.0.32</tomcat.version>
    <validation.version>1.1.0.Final</validation.version>

    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <modules>
    <module>config</module>
    <module>main</module>
    <module>plugin</module>
    <module>shell</module>
  </modules>

  <dependencies>
    <!-- Logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.18</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>2.5</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>2.5</version>
      <scope>runtime</scope>
    </dependency>

    <!-- Spring annotations -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-beans</artifactId>
      <version>${spring.version}</version>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
      <version>${spring.version}</version>
    </dependency>

    <!-- JUnit Test -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
      </plugin>

      <!-- For JUnit Tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <configuration>
          <parallel>methods</parallel>
          <threadCount>10</threadCount>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
